<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>College Quora</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <style>
            #setpass1,
            #setpass2,
            #setpass3 {
                display: none;
            }

            #forgotform {
                width: 50%;
            }

            @media screen and (max-width:768px) {
                #forgotform {
                    width: 95%;
                }

                .name {
                    font-size: xx-large;
                }
            }
        </style>
    </head>

    <body>
        <div class="container-md container-fluid">
            <div class="w-100 text-center mt-3">
                <h2 class="font-weight-bold name">Forgot Password</h2>
            </div>
            <%if(error){%>
              <%error.forEach(function(err){%>
                <div class="alert alert-danger text-center">
                  <%=err%>
                </div>
              <%})%>
            <%}%>
            <form method="POST" action="/forgotpassword" class="m-auto" id="forgotform">
                <div class="form-group" id="mail_id">
                    <label for="email" class="font-weight-bold">E-Mail</label>
                    <input type="email" class="form-control" name="email" placeholder="Email">
                </div>
                <button type="submit" class="my-3 btn btn-primary font-weight-bold" id="mailid1">
                    Submit
                </button>
            </form>
        </div>
