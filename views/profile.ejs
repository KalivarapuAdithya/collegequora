<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">


    <title>Profile Page</title>

    <style>
        @media screen and (max-width: 768px) {
            .heading{
                display: none;
                background-color: tomato;
            }
        }
    </style>
</head>

<body>
    <div class="container-lg container-fluid border border-primary">
        <div class="font-weight-bolder text-center">
            <h2>Attendance</h2>
        </div>
        <% if(errors.length){ %>
          <% errors.forEach(function(err){%>
            <div class="alert alert-danger text-center">
              <%= err %>
            </div>
          <%})%>
        <% } %>
        <form action="/profile/<%= user._id %>/course" method="POST">
            <div class="form-group">
                <label for="course" class="font-weight-bold" style="font-size: 18px;">Enter course name : </label>
                <input type="text" class="form-control" id="course" name="course" placeholder="Enter course name....">
            </div>
            <div class="form-group">
                <button type="submit"  class="btn btn-primary">Add course</button>
            </div>
        </form>



        <ul class="list-group flex-column" >

            <li class="list-group-item w-100 heading" style="background-color: #ddd;">
                <div class="row">
                    <div class="col-md-4 col-6 font-weight-bold " style="font-size: 18px;"> Course Name</div>
                    <div class="col-md-3 col-6 font-weight-bold" style="font-size: 18px;">Attendance(%)</div>
                    <div class="col-md-2 col-6 font-weight-bold" style="font-size: 18px;">Present</div>
                    <div class="col-md-2 col-6 font-weight-bold" style="font-size: 18px;">Absent</div>
                    <div class="col-md-1 col-6 font-weight-bold" style="font-size: 18px;">Delete</div>
                </div>
            </li>

            <% let i = 0; %>
            <% user.attendance.forEach(function(att){ %>
            <% let per = (att.present*100)/(att.present + att.absent) ; %>

                <li class="list-group-item w-100">
                    <div class="row">
                        <div class="col-md-4 col-sm-9 col-6 font-weight-bold mb-md-0 mb-2"><%= att.sub_code %></div>
                        <div class="col-md-3 col-sm-3 col-6 font-weight-bold mb-md-0 mb-2"><%= per.toFixed(2) %></div>
                        <div class="col-md-2 col-sm-4 col-6 mb-md-0 mb-2"><button class="btn btn-success font-weight-bold mb-2 mb-md-0"> <a href="/present/<%= user._id %>/<%= i %>" style="text-decoration:none;color:white;">present</a>(<%=att.present%>)</button>
                        </div>
                        <div class="col-md-2 col-sm-4 col-6 mb-md-0 mb-2"><button class="btn btn-danger font-weight-bold"> <a href="/absent/<%= user._id %>/<%= i %>" style="text-decoration:none;color:white">Absent</a>(<%=att.absent%>)</button>
                        </div>
                        <div class="col-md-1 col-sm-4 col-6">
                        <!-- <a class="d-inline btn  list-group-item border-0 " data-toggle="modal" data-target="#myModal" href="/delete/<%=user._id%>/<%=i%>"> <i class="fa fa-trash mt-1" style="font-size: 24px; color:red"></i> </a> -->
                        <button type="button" class="btn" data-toggle="modal" data-target="#myModal"> delete</button>
                        </div>
                    </div>

                    <div class="modal fade" id="myModal">
                        <div class="modal-dialog">
                          <div class="modal-content">
                          
                            <!-- Modal Header -->
                            <div class="modal-header">
                              <h4 class="modal-title">Modal Heading</h4>
                              <button type="button" class="close" data-dismiss="modal">Ã—</button>
                            </div>
                            
                            <!-- Modal body -->
                            <div class="modal-body">
                              Modal body..
                            </div>
                            
                            <!-- Modal footer -->
                            <div class="modal-footer">

                              <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>

                            </div>
                            
                          </div>
                        </div>
                      </div>

                </li>
                <% i++; %>
            <% }) %>
        </ul>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Launch demo modal
          </button>
          
          <!-- Modal -->
          <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  ...
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  <button type="button" class="btn btn-primary">Save changes</button>
                </div>
              </div>
            </div>
          </div>

          <!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Launch demo modal
  </button>
  
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          ...
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>
  

    </div>
</body>
</html>
