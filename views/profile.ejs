<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>



    <title>Profile Page</title>

    <style>
        @media screen and (max-width: 768px) {
            .heading{
                display: none;
                background-color: tomato;
            }
        }
    </style>
</head>

<body>
    <div class="container-lg container-fluid border border-primary">
        <div class="font-weight-bolder text-center">
            <h2>Attendance</h2>
        </div>
        <% if(errors.length){ %>
          <% errors.forEach(function(err){%>
            <div class="alert alert-danger text-center">
              <%= err %>
            </div>
          <%})%>
        <% } %>
        <form action="/profile/<%= user._id %>/course" method="POST">
            <div class="form-group">
                <label for="course" class="font-weight-bold" style="font-size: 18px;">Enter course name : </label>
                <input type="text" class="form-control" id="course" name="course" placeholder="Enter course name....">
            </div>
            <div class="form-group">
                <button type="submit"  class="btn btn-primary">Add course</button>
            </div>
        </form>



        <ul class="list-group flex-column" >

            <li class="list-group-item w-100 heading" style="background-color: #ddd;">
                <div class="row ">
                    <div class="col-md-4 col-6 font-weight-bold " style="font-size: 18px;"> Course Name</div>
                    <div class="col-md-3 col-6 font-weight-bold" style="font-size: 18px;">Attendance(%)</div>
                    <div class="col-md-2 col-6 font-weight-bold" style="font-size: 18px;">Present</div>
                    <div class="col-md-2 col-6 font-weight-bold" style="font-size: 18px;">Absent</div>
                    <div class="col-md-1 col-6 font-weight-bold" style="font-size: 18px;">Delete</div>
                </div>
            </li>

            <% let i = 0; %>
            <% user.attendance.forEach(function(att){ %>
            <% let per = (att.present*100)/(att.present + att.absent) ; %>

                <li class="list-group-item w-100">
                    <div class="row">
                        <div class="col-md-4 col-sm-9 col-6 font-weight-bold mb-md-0 mb-2"><%= att.sub_code %></div>
                        <div class="col-md-3 col-sm-3 col-6 font-weight-bold mb-md-0 mb-2"><%= per.toFixed(2) %></div>
                        
                        <div class="col-md-2 col-sm-4 col-6 mb-md-0 mb-2"><a class="btn btn-success font-weight-bold" href="/present/<%= user._id %>/<%= i %>" style="text-decoration:none;color:white;">present(<%=att.present%>)</a>
                        </div>
                        <div class="col-md-2 col-sm-4 col-6 mb-md-0 mb-2"><a class="btn btn-danger font-weight-bold" href="/absent/<%= user._id %>/<%= i %>" style="text-decoration:none;color:white">Absent(<%=att.absent%>)</a>
                        </div>
                        <div class="col-md-1 col-sm-4 col-6">
                        <!-- <a class="d-inline btn  list-group-item p-0 border-0 ml-3 text-center " data-toggle="modal" data-target="#myModal" href="/delete/<%=user._id%>/<%=i%>"> <i class="fa fa-trash mt-1" style="font-size: 24px; color:red"></i> </a> -->
                        <!-- <a class=" btn  list-group-item p-0 border-0 ml-3 text-center " data-toggle="modal" href="#myModal"> <i class="fa fa-trash mt-1" style="font-size: 24px; color:red"></i> </a> -->

                        <button class="d-inline btn  list-group-item p-0 border-0 ml-3 text-center " data-toggle="modal" data-target="#myModal" ><i class="fa fa-trash mt-1" style="font-size: 24px; color:red"></i> </button>
                        
                        <div class="modal" id="myModal">
                            <div class="modal-dialog modal-dialog-centered">
                               <div class="modal-content">
                          
                                <!-- Modal Header -->
                                <div class="modal-header border-0">
                                  <h4 class="modal-title text-center w-100">Confirm Deletion...</h4>
                                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                                </div>
                          
                                <!-- Modal body -->
                                <!-- <div class="modal-body">
                                  Modal body..
                                </div> -->
                          
                                <!-- Modal footer -->
                                <div class="modal-footer justify-content-around border-0">
                                  <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
                                  <a type="button" class="btn btn-danger" href="/delete/<%=user._id%>/<%=i%>">Delete</a>

                                </div>
                          
                              </div>
                            </div>
                          </div>

                        </div>
                    </div>
                </li>
                
                <% i++; %>
                <%}) %>
        </ul>

                    
  

    </div>
</body>
</html>
